{
    "name" : "soss-uploader",
    "description":"Vue.JS Plugin for Soss Router",
    "author":"Supun Dissanayake",
    "version" : "0.1",
    "gitUrl" : "",
    "resources": {
        "files":[
            {
                "type" : "mainScript",
                "location" : "script.js"
            }
        ]
    },
    "serviceHandler" : {
        "file": "service.php",
        "class": "UploaderService",
        "methods" : {
            "get" : {
                "method" : "GET",
                "route":"/get/@ns/@name"
            },
            "upload" : {
                "method" : "POST",
                "route":"/upload/@ns/@name"
            },
            "upload_uncompressed" : {
                "method" : "POST",
                "route":"/upload_uncompressed/@ns/@name"
            }

        }
    }    
}